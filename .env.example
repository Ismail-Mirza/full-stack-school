# Database
DATABASE_URL="postgresql://user:password@localhost:5432/school_db"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Cloudinary (for file uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# AI PLAYGROUND - RAG SYSTEM CONFIGURATION
# ==========================================

# OpenAI API Key (for embeddings and LLM)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Anthropic API Key (for Claude models)
# Get your API key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# RAG System Configuration
AI_MODEL=gpt-4o                    # Main LLM model
AI_EMBEDDING_MODEL=text-embedding-3-small  # Embedding model
AI_TEMPERATURE=0.7                 # LLM temperature (0-1)
AI_MAX_TOKENS=2000                 # Max tokens per response

# Vector Store Configuration
VECTOR_SIMILARITY_THRESHOLD=0.5    # Minimum similarity score
VECTOR_TOP_K=5                     # Number of documents to retrieve
VECTOR_CHUNK_SIZE=1000             # Document chunk size
VECTOR_CHUNK_OVERLAP=200           # Chunk overlap size

# Self-Learning Configuration
ENABLE_QUERY_REFINEMENT=true       # Enable automatic query refinement
MAX_REFINEMENT_ATTEMPTS=3          # Max refinement iterations
MIN_EVALUATION_SCORE=0.7           # Minimum acceptable answer quality

# Analytics
ENABLE_ANALYTICS=true              # Track usage analytics
ANALYTICS_RETENTION_DAYS=90        # Keep analytics for 90 days
